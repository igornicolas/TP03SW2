@model IEnumerable<TP03SW2.Models.BL>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a class="btn btn-primary" style="margin:15px" asp-action="Create">Criar novo BL</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consignee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Navio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BLId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consignee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Navio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BLId)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.BLId">Detalhes</a> |
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.BLId">Editar</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.BLId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
